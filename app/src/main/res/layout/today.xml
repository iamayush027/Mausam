<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:contentDescription="@string/image_to_be_loaded"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:layout_below="@id/imageView"
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:textStyle="italic"
        android:background="@color/colorPrimary"/>

    <TextView

        android:id="@+id/prepprob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prepprob"
     />

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity"
     />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wind_speed"/>
    <TextView
        android:id="@+id/cloudcover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure"/>

    <TextView
        android:id="@+id/uvindex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cloudcover"/>

    <TextView
        android:id="@+id/ozone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uvindex"/>

    <TextView
        android:id="@+id/celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/temp"
        android:text="C"
        android:textSize="40sp" />


</RelativeLayout>
</ScrollView>